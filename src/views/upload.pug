extends base.pug

block content 
  if errorMessgae 
    span=errorMesage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File 
    input(type="file", accept="video/*", required, id="video", name="video")
    input(placeholder="Title", required, type="text", name="title")
    input(placeholder="Description", required, type="text" name="description")
    input(placeholder="Hashtags, separted by comma", required, type="text", name="hashtags")
    input(type="submit", value="Upload Video")