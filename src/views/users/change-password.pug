extends ../base.pug

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(name="oldPassword", type="password", required, placeholder="Old password")
    input(name="newPassword", type="password", required, placeholder="New password")
    input(name="newPasswordConfirmation", type="password", required, placeholder="New password Confirmation")
    input(type="submit", value="Change Password")